{
  "scripts": {
    "dev": "dotenvx run -f .env.development -- ts-node-dev --respawn --transpile-only server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "setup": "npm install && npm run prisma:prod:generate && npm run prisma:dev:seed && npm run start",

    "prisma:dev:generate": "dotenvx run -f .env.development -- prisma generate",
    "prisma:dev:migrate": "echo 'MongoDB does not support migrations, skipping...' && exit 0",
    "prisma:dev:reset": "echo 'Reset not applicable for MongoDB, clearing data manually if needed.' && exit 0",
    "prisma:dev:seed": "dotenvx run -f .env.development -- ts-node prisma/seed.ts",
    "prisma:dev:studio": "dotenvx run -f .env.development -- prisma studio",
    "prisma:prod:generate": "prisma generate",
    "prisma:prod:migrate": "echo 'MongoDB does not use migrations, skipping.' && exit 0",
    "prisma:prod:reset": "echo 'MongoDB reset skipped.' && exit 0",
    "prisma:prod:seed": "ts-node prisma/seed.ts",
    "prisma:prod:studio": "prisma studio"
  },
  "prisma": {
    "seed": "ts-node-dev prisma/seed.ts"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.51.0",
    "@prisma/client": "^6.16.3",
    "argon2": "^0.44.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dayjs": "^1.11.18",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.6",
    "nodemon": "^3.1.10",
    "prisma": "^6.16.3",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.7.1",
    "@types/nodemailer": "^7.0.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
